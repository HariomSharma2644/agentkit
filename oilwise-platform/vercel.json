{
  "version": 2,
  "framework": "create-react-app",
  "buildCommand": "cd web-dashboard && npm ci && npm run build",
  "outputDirectory": "web-dashboard/build",
  "installCommand": "cd web-dashboard && npm ci",
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "https://oilwise.vercel.app/api",
    "REACT_APP_AI_ENGINE_URL": "https://oilwise.vercel.app/ai",
    "REACT_APP_ENVIRONMENT": "production"
  },
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "nodejs22.x"
      }
    },
    {
      "src": "web-dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/index.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "web-dashboard/build/$1"
    }
  ]
}

